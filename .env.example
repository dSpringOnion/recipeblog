# Database
DATABASE_URL="postgresql://username:password@localhost:5432/recipe_blog"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (for magic links)
# Option 1: Use individual SMTP settings (Gmail example)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-16-char-app-password"

# Option 2: Use complete SMTP URL (alternative)
# EMAIL_SERVER_URL="smtps://your-email%40gmail.com:your-app-password@smtp.gmail.com:465"

# Option 3: SendGrid (recommended for production)
# EMAIL_SERVER_URL="smtps://apikey:YOUR_SENDGRID_API_KEY@smtp.sendgrid.net:465"

# Option 4: Resend (modern alternative)
# EMAIL_SERVER_URL="smtps://resend:YOUR_RESEND_API_KEY@smtp.resend.com:465"

# Sender address (should match your domain for better deliverability)
EMAIL_FROM="noreply@yourdomain.com"

# Cloudflare Media Storage Configuration
# Account ID from Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID="your-account-id"

# API Token with R2 and Stream permissions
CLOUDFLARE_API_TOKEN="your-api-token"

# R2 Bucket for images and files
CLOUDFLARE_R2_BUCKET="recipe-images"

# R2 Access Keys (create in R2 settings)
CLOUDFLARE_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_SECRET_ACCESS_KEY="your-r2-secret-access-key"

# Optional: Custom domain for R2 CDN
# CLOUDFLARE_R2_CDN_URL="https://cdn.yourdomain.com"

# Stream webhook secret for video processing notifications
CLOUDFLARE_STREAM_WEBHOOK_SECRET="your-webhook-secret"

# Optional: Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# Optional: Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Performance Optimization (Prisma Optimize)
# Get your API key from: https://www.prisma.io/data-platform
OPTIMIZE_API_KEY="your-prisma-optimize-api-key"

# Optional: Prisma Accelerate connection string (for enhanced performance)
# ACCELERATE_DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=your-accelerate-api-key"